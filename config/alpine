KEYMAPOPTS="us us"

HOSTNAMEOPTS="-n alpine"

# Contents of /etc/network/interfaces
INTERFACESOPTS="auto lo
iface lo inet loopback

auto eth0
iface eth0 inet dhcp
"

TIMEZONEOPTS="-z Europe/Berlin"

PROXYOPTS="none"

APKREPOSOPTS="-1"

SSHDOPTS="-c openssh"

# Use openntpd
NTPOPTS="-c openntpd"

# Use /dev/sda as a system disk
DISKOPTS="-m sys -L -s 0 /dev/sda"
